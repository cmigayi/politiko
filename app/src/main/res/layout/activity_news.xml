<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.cilo.politiko.ActivityNews">

    <include layout="@layout/toolbar" android:id="@+id/tool_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="Reporter Interview:"
        android:textColor="#000"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/reporter_interview"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:id="@+id/question_tv"
            android:text="@string/first_reporter_question"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#f33442"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:minHeight="0dp"
            android:padding="7dp"
            android:textAllCaps="false"
            android:id="@+id/proceed_btn"
            android:text="Respond"/>

    </LinearLayout>

</RelativeLayout>
